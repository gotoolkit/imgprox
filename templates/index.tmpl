<!DOCTYPE HTML>
<html>
<head>
    <link rel="stylesheet" href="//cdn.webix.com/edge/webix.css" type="text/css">
    <script src="//cdn.webix.com/edge/webix.js" type="text/javascript"></script>
</head>
<body>

<script type="text/javascript" charset="utf-8">
    var filmset = [
        {{ range $i, $e := .files }}
            {id:{{$i}}, title:{{$e.FileInfo.Name}}, path:{{$e.RealPath}}},
        {{ end }}
    ];

    webix.ui({
        rows: [
            { view:"toolbar", id:"mybar", elements:[
                { view:"button", value:"Add", width:70 },
                { view:"button", value:"Delete", width:70 },
                { view:"button", value:"Update", width:70 },
                { view:"button", value:"Clear Form", width:85}]
            },
            { cols:[
                {
                    view:"list",
                    id:"mylist",
                    template:"#title#",
                    select:true, //enables selection
                    width: 180,
                    data: filmset
                },
                {
                    data: {title: "Image One", src: "images/Lenna.png" },
                    id:"myimage",
                    template: function (obj) {
                        // obj is a data record object
                        return '<img src="'+obj.src+'"/>'
                    }

                }]
            }
        ]
    });

    $$("mylist").attachEvent("onAfterSelect", function(id){
        $$("myimage").setValues({
            src: $$("mylist").getItem(id).path
        });
    });
</script>
</body>
</html>
